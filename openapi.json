{
  "openapi": "3.0.0",
  "info": {
    "title": "Simple Inventory API",
    "description": "This is a simple API",
    "contact": {
      "email": "you@your-company.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Localhost"
    },
    {
      "url": "https://virtserver.swaggerhub.com/hwupathum/media-server/1.0.0",
      "description": "SwaggerHub API Auto Mocking"
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Used for login, signup"
    },
    {
      "name": "user",
      "description": "Used for logged in functions"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "User login",
        "operationId": "userLogin",
        "requestBody": {
          "description": "Email and password",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Auth"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "403": {
            "description": "Username or password is incorrect",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          },
          "404": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "User register",
        "operationId": "userRegister",
        "requestBody": {
          "description": "Register",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "403": {
            "description": "Email already exists.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          },
          "404": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          }
        }
      }
    },
    "/user/logout": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "User logout",
        "operationId": "userLogout",
        "responses": {
          "200": {
            "description": "Logout successful"
          },
          "404": {
            "description": "Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Auth": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "abc@def.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "12345678"
          }
        }
      },
      "Message": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "required": [
          "id",
          "name",
          "email",
          "password"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minimum": 2,
            "maximum": 12,
            "example": "John Dove"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "abc@def.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "12345678"
          },
          "password2": {
            "type": "string",
            "format": "password",
            "example": "12345678"
          }
        }
      }
    }
  }
}
